
<div class="container">
  <div class="rows">

	<h1><%= @user.name %>'s Todo List</h1>
	<%#= mail_to @user.email %>
	<% if @user.items.any? %>

		<table class="table table-hover js-todos">
			<thead>
		      <tr>
		        <th>Description</th>
		        <th>Days left</th>
		        <th>Complete</th>
		      </tr>
	    	</thead>			
			
			<%= render partial: 'items/item', collection: @items %>
			
		</table>

	<% end %>
	
		<%= render partial: 'items/form', locals: { user: @user } %>

  </div>
</div>




