
<h4>Create new todo</h4>

<%= form_for [@user, Item.new] do |f| %>
  <div class="col-md-8">

    <div class="form-group">
	  <%#= f.label :name, "Item" %>
	  <%= f.text_field :name, class: "form-control", placeholder: "Enter your todo item" %>
  	</div>

    <div class="form-group">
  	  <%= f.submit class: "btn btn-default" %>
    </div>

  </div>

<% end %>

